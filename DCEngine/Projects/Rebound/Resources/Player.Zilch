class Player : ZilchComponent 
{
  var Health : Real = 100;
  var MaxHealth : Real = 95;

  [Static]
  function SayHello()
  {
    Console.WriteLine("Hello world!");
  }

  function TakeDamage(amount : Real)
  {
    this.Health -= amount;
    Console.WriteLine("Ouch! I've got `this.Health` health left!");
  }
}